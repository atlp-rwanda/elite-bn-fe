{
  "collectCoverage": true,
  "testEnvironment": "jsdom",
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "lines": 90
    }
  },
  "coverageReporters": ["lcov", "text"],
  "coverageDirectory": "coverage",
  "testTimeout": 10000,
  "transform": {
    "\\.[jt]sx?$": "babel-jest"
  },
  "moduleNameMapper": {
    "\\.(scss|sass|css)$": "identity-obj-proxy"
  }
}
